{{> menuNav}}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<body>
    <h1>{{patient.firstName}} {{patient.lastName}}</h1>
    <div>
        <canvas id="myChart"></canvas>
        <script>
            const ctx = document.getElementById('myChart');
            const myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels:  Array.from(Array(28).keys()).reverse().map(e => {
                        const d = new Date(); 
                        d.setDate(d.getDate() - e); 
                        return d.toLocaleDateString();}),
                    datasets: [{
                        data: [{{datapoints}}],
                        borderColor: "#b374df",
                        borderWidth: 1
                    }, {
                        data: new Array(28).fill({{chart.low}}),
                        borderColor: "#ff1212",
                        borderWidth: 1,
                        borderDash: [10, 5],
                        hitRadius: 0
                    }, {
                        data: new Array(28).fill({{chart.high}}),
                        borderColor: "#ff1212",
                        borderWidth: 1,
                        borderDash: [10, 5],
                        hitRadius: 0
                    }]
                },
                options: {
                    plugins: {
                        legend: { display: false },
                        tooltips: { enabled: false },
                    },
                    elements: {
                        point: {
                            radius: 0,
                            hitRadius: 25,
                            hoverRadius: 5
                        }
                    },
                    scales: {
                        x: {
                            grid: { display: false },
                            ticks: {
                                autoSkip: true,
                                maxTicksLimit: 10
                            }
                        },
                        y: {
                            min: {{chart.ymin}}, 
                            max: {{chart.ymax}}
                        }
                    }
                }
            });
        </script>
    </div>
    <table>
        <tr>
            <th>Date</th>
            {{#each trackingTypes}}
                <th>{{this}}</th>
            {{/each}}
        </tr>
        {{#each allDays}}
            <tr>
                <td>{{@key}}</td>
                {{#each this}}
                    {{#if this.comment}}
                        <td class="tooltip">{{this.measurement}}
                            <span class="tooltiptext">{{this.comment}}</span>
                        </td>
                    {{else}}
                        <td>{{this.measurement}}</td>
                    {{/if}}
                {{/each}}
            </tr>
        {{/each}}
    </table>
    <table>
        <tr>
            <th>Clinician Note</th>
        </tr>
        <tr>
            <td>({{today}})</td>
            <td><form><input></form></td>
        </tr>
        {{#each notes}}
            <tr>
                <td>{{@key}}</td>
                <td>{{this}}</td>
            </tr>
        {{/each}}
    </table>
</body>
