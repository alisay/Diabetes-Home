        <li class="btn" onclick="show()"><a href="#"><i class="fas fa-bars"></i></a></li>
    </ul>
</nav>

<script>
    function show(){
        var x = document.getElementsByClassName("items")[0];
        var nav = document.getElementsByClassName("items");
        if (x.style.display === "none") {
            for (let i = 0; i < nav.length; i++) {
                nav[i].classList.toggle('hide');
            }
        } else {
            for (let i = 0; i < nav.length; i++) {
                nav[i].classList.toggle('show');
            }
        }
    }
</script>

<section class= "container">    
    <div class = "column-1">
        <div class = "glass">
            <h2>Personal</h2>
            <div class = 'personal widget'>
                <p>{{welMessage}}</p>
            </div>
        </div>

        <div class = "glass">
            <div>
                <input type="checkbox" id ='collapsible-unread'>
                <label for="collapsible-unread">
                    <h2>Unread</h2>
                    <div class = 'unread widget'>
                        <p>{{notification}}</p>
                    </div>
                </label>
                
                <div class="collapsible-message">
                    <p>{{cliMessage}}</p>
                </div>

                <div class = 'unread-under'></div>
            </div>
        </div>

        <div class = "glass">
            <h2>Today Measurements</h2>
            <div class = "measurement-wrapper">
                {{{measurements}}}
            </div>
        </div>
    </div>

    <div class = "column-2">
        <div class = "glass">
            <div class = 'leaderboard'>
                <h2>Leaderboard</h2>
                {{#each users}}
                    <p>data {{this}}</p>
                    <div class="user rank-widget">
                        <div class= "user-info">
                            <h3>{{this.nickname}}</h3>
                            <div class="progress"></div>
                        </div>
                        <h2 class="percentage">{{this.engageRate}}</h2>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>

