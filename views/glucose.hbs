<h1>ADD TODAY'S BLOOD GLUCOSE LEVEL</h1>
<form action="/glucose" method="POST">
    <label for="glucose">Blood glucose level (in nmol/L):</label>
    <input type="number" step="0.01" name="glucose" />
    <label for="comment">Comment:</label>
    <input type="text" name="comment" />
    <input type="submit" value="Submit" />
</form>

<h1>YOUR GLUCOSE HISTORY:</h1>
{{#each glucoseData}}
    <li
     {{#when this.glucose 'gteq' 7}}
   class="highlight_metric"
 {{/when}}
    >
        <b>{{this.timestamp}}</b> {{this.glucose}} nmol/L 


    </li>
{{/each}}

